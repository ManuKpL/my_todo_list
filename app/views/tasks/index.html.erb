<div class="text-center">
  <h2>Your tasks are:</h2>
  <ul>
    <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, task_path(task) %>
      <% if task.done %>
        <i class="fa fa-check"></i>
      <% else %>
        <i class="fa fa-times"></i>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>
