<hr>
<%= simple_form_for(@task) do |f| %>
  <%= f.input :name, label: "What is the name of your task?", placeholder: "Task name" %>
  <%= f.input :description, label: "How would you describe your task?", placeholder: "Task description" %>
  <%= f.submit "Submit", class: "btn btn-success" %>
<% end %>
<br>
<%= link_to "Cancel and go back to Todo List", tasks_path, class: "btn btn-danger" %>
