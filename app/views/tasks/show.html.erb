<div class="card card-task text-center">
  <h2><%= @task.name %></h2>
  <hr>
  <p><%= @task.description %></p>
  <hr>
  <p>
    <% if @task.done %>
      Task already done! <i class="fa fa-check"></i>
    <% else %>
      Task not done yet... <i class="fa fa-times"></i>
    <% end %>
  </p>
  <br>
  <%= link_to "Back to Todo List", tasks_path, class: "btn btn-primary" %>
</div>
